<table class='table table-striped mt-4' style="padding:2px">
    <thead class='thead thead-dark'>
        <th class='col-2' id="SortPName">Player Name</th>
        <th class='col-1' id="SortAge">Age</th>
        <th class='col-1' id="SortTName">Team</th>
        <th class='col-1' id="SortPos">Position</th>
        <th class='col-2' id="SortFPoints">NFL Fantasy Pts</th>
        <th class='col-1' id="SortRank">Rank</th>
        <th class='col-1' id='selectPlayer'>Draft Player</th>
    </thead>
    <tbody>
    @{
        foreach(var player in @Model){
            <tr>
                <td class='col-2'>@player.Name</td>
                <td class='col-1'>@player.Age</td>
                <td class='col-1'>@player.TeamName</td>
                <td class='col-1'>@player.Position</td>
                <td class='col-2'>@player.FPointsNFL</td>
                <td class='col-1'>@player.Rank</td>
                <td class='col-1'><button class='select btn btn-primary btn-sm' data-name="Dan" data-player='@player.Name'>Draft</button></td>             
            </tr>
        }
    }
    </tbody>
</table>
